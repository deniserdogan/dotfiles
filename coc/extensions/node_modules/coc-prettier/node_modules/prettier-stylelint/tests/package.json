{
    "stylelint": {
        "extends": ["stylelint-config-recommended", "./config"],
        "rules": {
            "string-quotes": "single",
            "indentation": [
                4,
                {
                    "except": ["value"]
                }
            ],
            "color-hex-case": "upper",
            "color-hex-length": "short",
            "unit-whitelist": ["em", "rem", "%", "s", "px"]
        }
    }
}
